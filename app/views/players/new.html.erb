<h1> Add New Member to team.name </h1>

<%= form_for player do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :nickname %>
  <%= f.text_field :nickname %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.fields_for :player_teams, player_team do |g| %>
    <%= g.hidden_field :team_id, value: team.id %>
    <%= g.label :captain %>
    <%= g.check_box :captain %>
    <%= g.label :order %>
    <%= g.number_field :order %>
  <% end %>
  <%= f.submit "Add Team Member" %>
<% end %>
